{
    "manifest_version": 3,
    "name": "AI Translator",
    "version": "1.0.0",
    "description": "A standalone AI translation tool powered by Gemini.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "vite.svg",
            "48": "vite.svg",
            "128": "vite.svg"
        }
    },
    "icons": {
        "16": "vite.svg",
        "48": "vite.svg",
        "128": "vite.svg"
    },
    "permissions": [
        "storage"
    ]
}